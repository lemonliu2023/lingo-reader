    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "bumpp": "^10.0.1",
    "eslint": "^9.4.0",
    "lint-staged": "^15.2.5",
    "rollup": "^4.18.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "simple-git-hooks": "^2.11.1",
    "typescript": "5.7.3",
    "vitest": "^2.1.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint . --fix --cache"
